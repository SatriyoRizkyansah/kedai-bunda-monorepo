FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY apps/web/package*.json ./
RUN npm install

# Expose Vite dev server port
EXPOSE 5173

# Start Vite dev server
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
